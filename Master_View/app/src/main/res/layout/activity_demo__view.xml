<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.master_view.ui.Demo_View">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <!--透明度属性设置-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="alpha透明度测试:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:alpha="0.4"
            android:background="@color/colorAccent"
            android:text="alpha为40"
            />


        <TextView
            android:id="@+id/alpha_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:alpha="0.8"
            android:background="@color/colorAccent"
            android:text="alpha为80"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3D测试:"
            />


        <TextView
            android:id="@+id/elevation_3D"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/elevation_shape"
            android:elevation="6dp"
            android:gravity="center"
            android:text="3D效果"

            />


        <TextView
            android:id="@+id/tanslationZ_3D"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/elevation_shape"
            android:gravity="center"
            android:text="3D效果"
            android:translationZ="20dp"
            />
    </LinearLayout>


    <Button
        android:id="@+id/bt_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="简单的图片浏览"
        android:textSize="16sp"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    >

    <Button
        android:id="@+id/bt_custom_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义View"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/bt_customview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义View——小球跟随手指移动"
        android:textSize="16sp"
        />

</LinearLayout>

    <Button
        android:id="@+id/bt_tablelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="表格布局"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/bt_neonlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="霓虹灯+帧布局"
        android:textSize="16sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="网址是 www.baidu.com，电话是 123456789"
            android:textSize="16sp"
            android:autoLink="web|phone"
            />

    </LinearLayout>

    <Button
        android:id="@+id/bt_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="相机"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/bt_alertdialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="AlertDialog"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/bt_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="动画"
        android:textSize="16sp"
        />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >

           <Button
               android:id="@+id/bt_Listview"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:text="ListView"
               android:textSize="16sp"
               />

           <Button
               android:id="@+id/bt_RecyclerView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:text="RecyclerView"
               android:textSize="16sp"
               />


           <Button
               android:id="@+id/bt_ChatActivity"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:text="ChatActivity"
               android:textSize="16sp"
               />

       </LinearLayout>


        <Button
            android:id="@+id/bt_handler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Handler消息机制"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/bt_CustomActivityOnCrash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="CustomActivityOnCrash崩溃信息"
            android:textSize="16sp"
            />

    </LinearLayout>
</ScrollView>
